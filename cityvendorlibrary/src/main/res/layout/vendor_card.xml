<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/beige">

    <android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/CARD_view"
    android:padding="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:padding="8dp">

        <ImageView
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:id="@+id/VTN_image"
            android:scaleType="centerCrop"

            android:alpha="0.4"
            android:src="@drawable/ic_action_person"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/VTN_top"
            android:layout_toRightOf="@+id/VTN_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vendor Name"
                android:id="@+id/VTN_textName"
                style="@style/BlueRoundedRectangle"

                android:layout_marginLeft="8dp"
                android:layout_marginTop="48dp"/>

            </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/VTN_count"
            android:layout_below="@+id/VTN_top"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_alignLeft="@+id/VTN_top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/VTN_textCounter"
                android:text="00"
                style="@style/BlueCircle"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/VTN_textCounterLabel"
                android:text="Street Address"
                style="@style/BlueRoundedRectangle"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/VTN_textCounter"/>

            </RelativeLayout>

  <!--      <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:id="@+id/VTN_textNumber"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="8dp"/>
            style="@style/BlueCircle"
-->
    </RelativeLayout>

</android.support.v7.widget.CardView>
