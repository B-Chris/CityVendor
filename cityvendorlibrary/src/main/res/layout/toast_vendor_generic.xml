<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/VENDTOAST_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/VENDTOAST_banner"
            android:src="@drawable/vendor_banner_2"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/VENDTOAST_top"
        android:padding="24dp"
        android:background="@color/beige_pale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/VENDTOAST_text"
            android:text="General message text happens here and things could be long in the tooth."
            style="@style/TitleTextStyleBlack"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <TextView
        android:id="@+id/VENDTOAST_indicator"
        android:layout_alignParentLeft="true"
        android:layout_margin="8dp"
        style="@style/BlueCircle"
        android:text="M"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>