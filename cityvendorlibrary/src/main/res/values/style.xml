<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--Text Appearances-->
    <style name="TextAppearance.Small">
        <item name="android:textSize">12sp</item>

    </style>
    <style name="TextAppearance">
  <!--  <item name="textColor">textColorPrimary</item>  -->
  <!--  <item name="android:textColorHighlight">textColorHighlight</item>  -->
  <!--  <item name="android:textColorHint">textColorHint</item>  -->
  <!--  <item name="android:textColorLink">textColorLink</item>  -->
        <item name="android:textSize">16sp</item>
  <!--   <item name="textStyle">normal</item> -->
    </style>

    <style name="TextAppearance.Large">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
    </style>

<!--Title Texts-->
    <style name="TitleTextStyleBlue"
        parent="TextAppearance.Large">
        <item name="android:textColor">@color/Blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TitleTextStyleWhite" parent="TextAppearance.Large">
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle"> normal</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TitleTextStyleBlack" parent="TextAppearance.Large">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

   <style name="Title1TextStyleWhite"
       parent="TextAppearance.Large">
       <item name="android:textColor">@color/White</item>
       <item name="android:textStyle">bold</item>
       <item name="android:textSize">30sp</item>
       </style>

    <!--shapes-->
    <style name="BlueCircle" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/xblue_oval</item>

    </style>

    <style name="BlueRoundedRectangle" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/xblue_rounded_corners</item>
    </style>

    <style name="BlueButton" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
            <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/xblue_rectangle</item>
    </style>

    <!-- Themes -->

    <style name="AppTheme2" parent="Theme.AppCompat.Light.DarkActionBar"/>
    <style name="AppTheme" parent="Theme.AppCompat"/>
</resources>